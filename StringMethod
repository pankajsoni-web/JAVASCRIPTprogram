<h2>JavaScript String Methods</h2>

<p>The slice() method extract a part of a string
and returns the extracted parts in a new string:</p>

<p id="demo1"></p>
<p id="demo2"></p>
<p id="demo3"></p>
<p id="demo4"></p>
<p id="demo5"></p>
<p id="demo6"></p>
<button onclick="myFunction()">Try it</button>

<p id="demo">banana is best fruit</p>
<button onclick="myFunction1()">Try it</button>

<p id="demo7">Hello World!</p>


<script>
let str = "Apple, Banana, Kiwi";
document.getElementById("demo1").innerHTML = str.slice(7,13);
document.getElementById("demo2").innerHTML = str.substring(7,13);
document.getElementById("demo3").innerHTML = str.substr(7,6);
document.getElementById("demo4").innerHTML = str.substr(7,13);
function myFunction() {
  let text = document.getElementById("demo").innerHTML;
  document.getElementById("demo").innerHTML =
  text.replace("banana","mango");
}
function myFunction1() {
  let text = document.getElementById("demo").innerHTML;
  document.getElementById("demo7").innerHTML =
  text.toUpperCase();
}
let text1 = "Hello";
let text2 = "World!";
let text3 = text1.concat(" ",text2);
document.getElementById("demo5").innerHTML = text3;

</script>

